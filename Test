#include "C:\Users\Deepak Sharma\Documents\Arduino\libraries\mavlink\common\mavlink.h"

void setup() {
  Serial.begin(57600); // Initialize the serial communication for debugging purposes
}

void loop() {
  // Example code: Send a MAVLink heartbeat message every second
  sendHeartbeat();
  delay(1000);
}

void sendHeartbeat() {
  mavlink_message_t msg;
  mavlink_msg_heartbeat_pack(1, 200, &msg, MAV_TYPE_GENERIC, MAV_AUTOPILOT_GENERIC, 0, 0, 0);
  uint8_t buf[MAVLINK_MAX_PACKET_LEN];
  uint16_t len = mavlink_msg_to_send_buffer(buf, &msg);
  Serial.write(buf, len);
}
